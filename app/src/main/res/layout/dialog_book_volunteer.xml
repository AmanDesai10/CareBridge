<!-- dialog_book_volunteer.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/volunteerNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingEnd="16dp"
        android:text="Name:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/volunteerAgeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/volunteerNameTextView"
        android:padding="10dp"
        android:paddingEnd="16dp"
        android:text="Age:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/volunteerContactTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/volunteerAgeTextView"
        android:padding="10dp"
        android:paddingEnd="16dp"
        android:text="Contact:"
        android:textSize="16sp" />

    <Button
        android:id="@+id/bookVolunteerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/volunteerContactTextView"
        android:text="Book Volunteer"
        android:layout_margin="16dp"/>
</LinearLayout>
