<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:id="@+id/pdfHealthRecordCardView"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- PDF Icon -->
        <ImageView
            android:id="@+id/pdfIconImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_pdf"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>

        <!-- File Name -->
        <TextView
            android:id="@+id/fileNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/pdfIconImageView"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:text="File Name"/>

        <!-- Delete Icon -->
        <ImageView
            android:id="@+id/deleteIconImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/outline_delete_outline_24"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>

        <!-- View Icon -->
<!--        <ImageView-->
<!--            android:id="@+id/viewIconImageView"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:src="@drawable/ic_view"-->
<!--            android:layout_centerVertical="true"-->
<!--            android:layout_toStartOf="@id/deleteIconImageView"/>-->

    </RelativeLayout>

</androidx.cardview.widget.CardView>
